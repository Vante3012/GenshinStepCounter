<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/quest_light_gold">

    <TextView
        android:id="@+id/steps_from_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="42dp"
        android:textColor="@color/almost_black"
        android:fontFamily="@font/samuraiblast"
        android:layout_marginTop="50sp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/xp_from_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="32dp"
        android:textColor="@color/almost_black"
        android:fontFamily="@font/samuraiblast"
        android:layout_marginTop="100sp"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/coin_ico"
        android:background="@drawable/coin_ico"
        android:scaleType="centerCrop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginLeft="35sp"
        android:layout_below="@+id/moria_from_quest"
        android:text="0"/>

    <ImageView
        android:id="@+id/crystal_ico"
        android:background="@drawable/crystal_ico"
        android:scaleType="centerCrop"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:gravity="center"
        android:layout_marginLeft="280sp"
        android:layout_below="@+id/primeGems_from_quest"
        android:text="0" />

    <ImageView
        android:id="@+id/treasure_ico"
        android:background="@drawable/treasure_ico"
        android:scaleType="centerCrop"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="0"
        android:layout_marginTop="150sp"/>

    <TextView
        android:id="@+id/moria_from_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="42dp"
        android:textColor="@color/almost_black"
        android:fontFamily="@font/samuraiblast"
        android:layout_marginTop="230sp"
        android:layout_marginLeft="20sp"/>

    <TextView
        android:id="@+id/primeGems_from_quest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0"
        android:textSize="42dp"
        android:textColor="@color/almost_black"
        android:fontFamily="@font/samuraiblast"
        android:layout_marginTop="230sp"
        android:layout_marginLeft="280sp"/>

